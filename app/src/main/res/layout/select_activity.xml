                <!--android:text="水平居中" />-->

            <!--<RadioButton-->
                <!--android:id="@+id/right"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="水平居右" />-->

        <!--</RadioGroup>-->

        <RadioGroup
            android:id="@+id/video_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="白色背景" />

            <RadioButton
                android:id="@+id/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="黑色背景" />
        </RadioGroup>

        <Button
            android:id="@+id/start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开始" />
    </LinearLayout>
</ScrollView>